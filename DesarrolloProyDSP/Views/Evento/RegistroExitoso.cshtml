@model Tuple<DesarrolloProyDSP.Models.ModuloEvento.EventoViewModel,DesarrolloProyDSP.Models.ModuloEvento.RegistroEventoViewModel>

@{
    Layout = null;
    ViewBag.Title = "Registro Exitoso";
}

<!DOCTYPE html>

<head>
    @Html.Partial("../ViewPartialPrincipales/_ScriptsLink")

    <meta name="robots" content="noindex">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.5/css/swiper.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <script src="https://static.codepen.io/assets/common/stopExecutionOnTimeout-157cd5b220a5c80d4ff8e0e70ac069bffd87a61252088146915e8726e5d9f147.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.5/js/swiper.min.js"></script>

    <meta name="viewport" content="width=device-width" />
    <title>mensaje_Exitoso</title>

    <link href="~/css/style.css" rel="stylesheet" type="text/css" media="all">




    <style>

        #loging {
            background: white;
            padding: 10px 0 10px 0;
            text-align: left;
            max-width: 629px;
            margin: 40px auto;
            position: relative;
            text-align: center;
            height: 300px;
            border-radius: 5px;
        }
    </style>

    <!--heder end here-->
    <!-- script-for sticky-nav -->
    <script>
        $(document).ready(function () {
            var navoffeset = $(".header-main").offset().top;
            $(window).scroll(function () {
                var scrollpos = $(window).scrollTop();
                if (scrollpos >= navoffeset) {
                    $(".header-main").addClass("fixed");
                } else {
                    $(".header-main").removeClass("fixed");
                }
            });

        });
    </script>
    <!-- /script-for sticky-nav -->

</head>
<body>
    <div class="page-container">
        <div class="left-content">
            <div class="mother-grid-inner">
                @Html.Partial("../ViewPartialPrincipales/_Header")



                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>





        <!--inner block start here-->
        <div class="inner-block" style="margin-top: -20px">
            <!--market updates updates-->


            <div class="clearfix"> </div>










            <div class="chit-chat-layer1 ">

                <div class="col-md-2 chit-chat-layer1-left ">



                </div>

                <div class="col-md-8">

                    <div class="blog-slider swiper-container-fade swiper-container-horizontal">

                        <div class="blog-slider__Bienvenida" style="text-align: center; margin-top:-5px; margin-bottom: -30px; z-index: 0">¡Registro Exitoso!</div>
                        <div class="blog-slider__wrp swiper-wrapper" style="transition-duration: 0ms; z-index: 0">



                            <br>

                            <div class="blog-slider__item swiper-slide swiper-slide-duplicate-next" data-swiper-slide-index="0" style="width: 308px; opacity: 1; transform: translate3d(-308px, 0px, 0px); transition-duration: 0ms; ">


                                <div class="blog-slider__img">
                                    <img src="@Url.Action("Index","VisualizacionPrevia",new { archivo=Model.Item1.rutaIcono})" alt="">
                                </div>

                                <div class="blog-slider__content">

                                    <div class="blog-slider__title" style="margin-top: -40px;">Quedó guardado su registro al evento:</div>
                                    <br>
                                    <div class="blog-slider__text">@Model.Item1.nombre</div>

                                    @if (Model.Item1.fVigenciaInicio.ToString("dd") != Model.Item1.fVigenciaFin.ToString("dd") && Model.Item1.fVigenciaInicio.ToString("MMM") == Model.Item1.fVigenciaFin.ToString("MMM"))
                                    {
                                        <span class="blog-slider__code">Del @Model.Item1.fVigenciaInicio.ToString("dd") al @Model.Item1.fVigenciaFin.ToString("dd") de @Model.Item1.fVigenciaInicio.ToString("MMMM").ToLower()</span>
                                    }
                                    else if ((Model.Item1.fVigenciaInicio.ToString("dd") == Model.Item1.fVigenciaFin.ToString("dd") || Model.Item1.fVigenciaInicio.ToString("dd") != Model.Item1.fVigenciaFin.ToString("dd")) && Model.Item1.fVigenciaInicio.ToString("MMM") != Model.Item1.fVigenciaFin.ToString("MMM"))
                                    {
                                        <span class="blog-slider__code">Del @Model.Item1.fVigenciaInicio.ToString("dd") de @Model.Item1.fVigenciaInicio.ToString("MMMM").ToLower() al @Model.Item1.fVigenciaFin.ToString("dd") de @Model.Item1.fVigenciaFin.ToString("MMMM").ToLower()</span>
                                    }
                                    else if (Model.Item1.fVigenciaInicio.ToString("dd") == Model.Item1.fVigenciaFin.ToString("dd") && Model.Item1.fVigenciaInicio.ToString("MMM") == Model.Item1.fVigenciaFin.ToString("MMM"))
                                    {
                                        <span class="blog-slider__code">Del @Model.Item1.fVigenciaInicio.ToString("dd") de @Model.Item1.fVigenciaInicio.ToString("MMMM").ToLower()</span>
                                    }
                                    <br>

                                    <a href="#" class="blog-slider__button" tooltip="Descargar comprobante" onclick="document.getElementById('PDFtoPrint').focus(); document.getElementById('PDFtoPrint').contentWindow.print();">Descargar</a><samp>         &shy; &shy;</samp><a href="@Url.Action("Eventos","Evento")" class="blog-slider__button2" tooltip="Regresar a eventos">Regresar</a>
                                </div>
                            </div>








                        </div>

                    </div>

                    <!--este es el div novisible que contiene la vista q debe llamarse-->
                    <div class="form-style-10" style="width: 100%; margin-top: -30px; visibility:hidden;">
                        <h1 style="margin-top: -10px">Previsualización</h1>
                        <!--esta es la vista q debe llamarse PDF_sinEstilo.cshtml   que es la q ya se agrego -->
                        <iframe src="@Url.Action("PDF_RegistroIndividual","Evento",new { e=Model.Item1.nombre,folio=Model.Item2.folio})" id="PDFtoPrint"></iframe>

                        
                    </div>



                    <script id="INLINE_PEN_JS_ID">
                        var swiper = new Swiper('.blog-slider', {
                            spaceBetween: 30,
                            effect: 'fade',


                            // autoHeight: true,
                            pagination: {
                                el: '.blog-slider__pagination',
                                clickable: true
                            }
                        });
                                            //# sourceURL=pen.js
                    </script>
                </div>
                <div class="col-md-2 chit-chat-layer1-rit">



                </div>
                <div class="clearfix"> </div>
            </div>


        </div>
        <!--inner block end here-->
        <!--copy rights start here-->
        @Html.Partial("../ViewPartialPrincipales/_Footer")
        <div class="clearfix"> </div>


    </div>




</body>

</html>
