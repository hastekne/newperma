@model DesarrolloProyDSP.Models.ModuloEvento.EventoViewModel

<!--Cambio style del DIV abajo-->
<div style="position: fixed; z-index: 999; width: 100%; height: 100%;text-align: center; top: 0; left: 0; background: rgba(0,0,0,0.8)">
    <!--Cambio style del DIV abajo-->
    <div style="background: white; padding: 10px 0 10px 0; max-width: 629px; max-height:900px; margin: 40px auto; position: relative; border-radius: 5px; z-index:1000; -moz-opacity: !important 1; opacity:!important 1; filter: alpha(opacity=100); ">
        <!--Cambio style del DIV abajo-->
        <div class="pop_up">

            <div class="blog-slider swiper-container-fade swiper-container-horizontal">

                <div class="blog-slider__Error" style="text-align: center; margin-top:-30px; margin-bottom: -30px; z-index: 0;">¡Error de Registro!</div>
                <div class="blog-slider__wrp swiper-wrapper" style="transition-duration: 0ms; z-index: 0">



                    <div align="center" style="width:550px">


                        <div style="width:100%; text-align:center; " align="center">
                            <br />
                            <div style="margin-top:35px;"><span>@Model.objetivo</span></div> @*En Model.objetivo se guarda el error ocurrido al momento del registro, solo para desplegar en el popUP*@ 
                            <div class="blog-slider__title" style="margin-top:25px;">Hubó un error en su registro al evento:</div>
                            <div class="blog-slider__text">@Model.nombre</div>
                            @*<span class="blog-slider__code">Del 22 al 25 de Marzo de 2021</span>*@
                            @if (Model.fVigenciaInicio.ToString("dd") != Model.fVigenciaFin.ToString("dd") && Model.fVigenciaInicio.ToString("MMM") == Model.fVigenciaFin.ToString("MMM"))
                            {
                                <span class="blog-slider__code">Del @Model.fVigenciaInicio.ToString("dd") al @Model.fVigenciaFin.ToString("dd") de @Model.fVigenciaInicio.ToString("MMMM").ToLower()</span>
                            }
                            else if ((Model.fVigenciaInicio.ToString("dd") == Model.fVigenciaFin.ToString("dd") || Model.fVigenciaInicio.ToString("dd") != Model.fVigenciaFin.ToString("dd")) && Model.fVigenciaInicio.ToString("MMM") != Model.fVigenciaFin.ToString("MMM"))
                            {
                                <span class="blog-slider__code">Del @Model.fVigenciaInicio.ToString("dd") de @Model.fVigenciaInicio.ToString("MMMM").ToLower() al @Model.fVigenciaFin.ToString("dd") de @Model.fVigenciaFin.ToString("MMMM").ToLower()</span>
                            }
                            else if (Model.fVigenciaInicio.ToString("dd") == Model.fVigenciaFin.ToString("dd") && Model.fVigenciaInicio.ToString("MMM") == Model.fVigenciaFin.ToString("MMM"))
                            {
                                <span class="blog-slider__code">Del @Model.fVigenciaInicio.ToString("dd") de @Model.fVigenciaInicio.ToString("MMMM").ToLower()</span>
                            }
                            <br>

                            <button onclick="CerrarPopUpErrorRI()" class="blog-slider__button" tooltip="Volver a realizar el registro">Intente nuevamente</button><samp>         &shy; &shy;</samp><button onclick="VolverHomeEvento()" class="blog-slider__button2" tooltip="Regresar a eventos">Regresar</button>
                        </div>
                    </div>







                </div>

            </div>









        </div>
    </div>
</div>
<script type="text/javascript">
        function CerrarPopUpErrorRI() {
            document.getElementById('PopUpErrorRegistro').innerHTML = '';
        }

        function VolverHomeEvento() {
            var url = "@Url.Action("Eventos", "Evento")";
            window.location.assign(url);
        }

</script>
