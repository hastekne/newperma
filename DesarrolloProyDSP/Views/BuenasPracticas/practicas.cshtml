       // dataType: "html",
             success: function () // lowercase (not Success)
            {       

                 window.open("VistaPreviaIntroduccion?idModulo=01000000");
             },
             error: function () {
                alert("Error al abrir la vista previa.");
            }
        });
    }

    
</script>